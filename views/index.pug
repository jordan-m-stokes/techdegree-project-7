extends layout.pug

block content 

  article.grid-container.portfolio-intro
    div
      h1.text-center Welcome, I'm <strong class="theme-db">Stoked</strong> you're here!
      p.lead.text-light
        | Below is the work I have completed in pursuit of my Treehouse Techdegree
        | in full-stack JavaScript. Feel free to look aroung!

  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell.boxed
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/images/${project.image_urls.source}${project.image_urls.thumbnail}`)
            h5= project.project_name
      
